<div class="container">
  <h1> Your confirmed lease:</h1>

<div class="container">
  <div class="card-product">
    <div class="card-product" style="height: 600px;">
      <div class="painting-holder">
        <%= image_tag 'frame.png', class: "painting-frame" %>
        <%= cl_image_tag @lease.art.picture, crop: :fill, class:'art-img' %>
      </div>
    </div>
    <div class="card-product-infos box d-flex flex-column justify-content-between align-items-start m-3">
      <div class="mb-4">
        <h1 class="art-title"><%= @lease.art.name %></h1>
        <h4 class="art-price">Total price: Â£<%= number_with_delimiter(@lease.total_price.to_i) %></h4>
        <h3 class="art-description"> <%= @lease.art.description %>(painted by <em><%= @lease.art.artist %></em>)</h3>
        <h4> <i class="fas fa-calendar-alt"></i> <%= @lease.start.strftime("%b") %> <%= @lease.start.day %> to <%= @lease.end.strftime("%b") %> <%= @lease.end.day %></h4>
      </div>
      <div class="w-100">
        <h6 style="font-size: 25px;"><strong><i class="fas fa-map-marker-alt"></i></strong> <%= @lease.art.location %></h6>
        <div class="d-flex justfiy-content-start align-items-center">
          <%= cl_image_tag @lease.art.owner.picture, class:'avatar-large mr-2' %>
          <div>
            <p style="font-weight: bolder;"><%= @lease.art.owner.name %></p>
            <p><i class="fas fa-phone"></i> <%= @lease.art.owner.phone_number %></p>
          </div>
        </div>
  <%= link_to "Cancel booking", lease_path(@lease), method: :delete, class:"btn btn-danger my-3" %>
      </div>
    </div>
  </div>
</div>

  <br>
  <%= link_to "Back to all art pieces", arts_path, class:"btn red-font button-hover my-3" %>
</div>
