<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= (params[:controller] == 'pages' && params[:action] == 'home') ? 'navbar-fixed' : '' %>" style="background-color: <%= back_color %>">
    <%= link_to root_path, class: "navbar-brand" do %>
      <i class="fas fa-palette <%= font_class %>"></i>
    <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-link">
        <% if policy(Art).create? %>
          <%= link_to new_art_path do %>
          <div class="btn btn-outline-light rounded <%= font_class %> <%= button_hover %>">Add New Art</div>
          <% end %>
        <% end %>
      </li>
      <li class="nav-item dropdown avatar-center">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="">Profile</a>
          <a class="dropdown-item" href="#">Your Art Pieces</a>
          <%=link_to "Your leases", leases_path, class:"dropdown-item"%>
          <%=link_to "Log out", destroy_user_session_path, method: :delete, class:"dropdown-item"%>
        </div>
      </li>
    </ul>
  </div>
</div>
