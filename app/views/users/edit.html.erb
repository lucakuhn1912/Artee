<div class="container mt-3 w-50" >
  <%= simple_form_for(@user) do |f| %>
    <h2> <%= f.input :name, placeholder: "Full name" %> </h2>
    <h2> <%= f.input :description, placeholder: "Art amateur, big fan of modern art and Asian antiques!"%> </h2>
    <h2> <%= f.input :phone_number, placeholder: "07 45 45 44 184"%> </h2>
    <h4> <%= f.input :picture, input_html: { class:'form-control' } %> </h4>
    <%= f.input :picture_cache, as: :hidden %>
    <%= f.submit "Save profile", class: "btn red-font button-hover mt-3 w-100" %>
  <% end %>
</div>
