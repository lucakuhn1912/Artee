<%= simple_form_for [art, review] do |f| %>
  <%= f.input :rating, label: false, collection: [1,2,3,4,5], input_html: { class: "form-control" } %>
  <div class="d-flex justify-content-start">
    <% if user_signed_in? %>
      <%= cl_image_tag current_user.picture, class:"avatar-large mr-2" %>
    <% end %>
    <%= f.input :content, label: false, input_html: { class: "form-control" }%>
    <%= f.button :button, id="send-icon", type: :submit do %>
      <i class="fas fa-paper-plane" style="font-size: 25px; color: grey;"></i>
    <% end %>
  </div>
<% end %>
